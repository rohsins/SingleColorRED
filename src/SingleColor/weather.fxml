<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="4">
    <ImageView fx:id="weatherIcon"
        GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Text fx:id="temperature" fill="red" text="Temperature"
        GridPane.rowIndex="1" GridPane.columnIndex="2" />
    <Text fx:id="feelsLikeTemperature" fill="red" text="Feels like"
          GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Text fx:id="humidity" fill="red" text="Humidity"
          GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Text fx:id="pressure" fill="red" text="Pressure"
          GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Text fx:id="windSpeed" fill="red" text="Wind Speed"
          GridPane.rowIndex="2" GridPane.columnIndex="2" />
    <Text fx:id="visibility" fill="red" text="Visibility"
          GridPane.rowIndex="3" GridPane.columnIndex="2" />
    <Text fx:id="precipitation" fill="red"
          GridPane.rowIndex="4" GridPane.columnIndex="2" />
</GridPane>